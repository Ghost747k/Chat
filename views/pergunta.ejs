<%- include('partials/header.ejs') %>
<body>
  <%- include('partials/navbar.ejs')%>
  <div class="container">
    <hr>
    <h1><%= pergunta.titulo%></h1>
    <p><%= pergunta.descricao%></p>
    <hr>
    <form action="/responder" method ="POST">
      <textarea class="form-control" name="resposta" placeholder="Digite sua resposta"></textarea><br>
      <input type="hidden" value="<%= pergunta.id%>" name="id">
      <button type="submit" class="btn btn-primary">Responder</button>
    </form>
    <hr>
    <h3>Respostas: </h3>
    <hr>
          <% respo.forEach((res)=> {%>
         
      <div class="card">
       <div class="card-body">
        <p><%= res.resposta%></p>
       </div>
      </div>
      <br>
          <% })%>
  </div>
</body>
<%- include('partials/footer.ejs')%>